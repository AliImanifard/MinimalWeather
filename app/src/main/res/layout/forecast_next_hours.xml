<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    >

    <TextView
        android:id="@+id/tv_next_hours_forecast_next_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_marginTop="7dp"
        />

    <ImageView
        android:id="@+id/iv_weather_icon_forecast_next_hours"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/weather_icon_rain_day"
        android:layout_below="@id/tv_next_hours_forecast_next_hours"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:id="@+id/tv_temp_forecast_next_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_weather_icon_forecast_next_hours"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="7dp"

        />

    <LinearLayout
        android:id="@+id/ll_min_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_temp_forecast_next_hours"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/tv_temp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:fontFamily="@font/lalezar"
            android:textColor="#8DE2E3"
            android:textSize="16sp"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cold"
            android:layout_marginEnd="-3dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="-1"
            android:src="@drawable/ic_hot"
            android:layout_marginStart="-3dp"/>

        <TextView
            android:id="@+id/tv_temp_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:fontFamily="@font/lalezar"
            android:textColor="#F9A949"
            android:textSize="16sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_min_max"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_humidity"
            android:layout_marginHorizontal="2dp"
            />

        <TextView
            android:id="@+id/tv_humidity_forecast_next_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:fontFamily="serif"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_humidity"
        android:layout_marginTop="5dp"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_precipitation"
            android:layout_marginHorizontal="2dp"
            />

        <TextView
            android:id="@+id/tv_precipitation_forecast_next_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:fontFamily="serif"
            />

    </LinearLayout>


</RelativeLayout>